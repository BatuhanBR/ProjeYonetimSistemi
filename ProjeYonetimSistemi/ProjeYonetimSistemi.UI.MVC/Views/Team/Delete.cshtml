@model ProjeYonetimSistemi.UI.MVC.Entity.TeamEntity

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Takım Sil</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Team")">Takımlar</a></li>
                        <li class="breadcrumb-item active">Takım Sil</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Bu takımı silmek istediğinizden emin misiniz?</h3>
            </div>
            <div class="card-body">
                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="TeamId" />
                    <div class="alert alert-secondary">
                        <strong>Uyarı!</strong> Bu işlem geri alınamaz.
                    </div>
                    <div>
                        <h4>@Model.TeamName</h4>
                        <!-- Üyeleri burada gösterebilirsiniz -->
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-warning">Geri Dön</a>
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
