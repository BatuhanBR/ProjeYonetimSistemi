@model ProjeYonetimSistemi.UI.MVC.Entity.TeamEntity

@{
    ViewData["Title"] = "Takım Düzenle";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Team")">Takım Yönetimi</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Takım Bilgilerini Düzenle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="form-group">
                        <label for="TeamName">Takım İsmi</label>
                        <input type="text" class="form-control" id="TeamName" asp-for="TeamName" />
                        <span asp-validation-for="TeamName" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-warning">Geri Dön </a>
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
