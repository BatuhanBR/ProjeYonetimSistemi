@model ProjeYonetimSistemi.UI.MVC.Models.UserDetailViewModel

<div class="content-wrapper" style="min-height: 1604.44px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kullanıcı Silme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "User")">Kullanıcılar</a></li>
                        <li class="breadcrumb-item active">Kullanıcı Silme</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Detayları</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Ad</label>
                    <p>@Model.FirstName</p>
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    <p>@Model.LastName</p>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <p>@Model.Email</p>
                </div>
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <p>Bu kullanıcıyı silmek istediğinize emin misiniz?</p>
                    <div class="form-group d-flex justify-content-between">
                        <a href="@Url.Action("Index", "User")" class="btn btn-warning">Geri Dön</a>
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
