@model ProjeYonetimSistemi.UI.MVC.Models.UpdateUserViewModel

@{
    ViewData["Title"] = "Kullanıcı Güncelle";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Bilgilerini Güncelle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Update" method="post">
                    <div class="form-group">
                        <label>Ad</label>
                        <input type="text" class="form-control" value="@Model.FirstName" readonly />
                    </div>
                    <div class="form-group">
                        <label>Soyad</label>
                        <input type="text" class="form-control" value="@Model.LastName" readonly />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
