@model ProjeYonetimSistemi.UI.MVC.Entity.ProjectEntity

@{
    ViewData["Title"] = "Görev Ekleme";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card" style="background-color: inherit; border: none;">
                    <div class="card-header">
                        <h1>Proje Ekle</h1>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddProject" method="post">
                            <div class="form-group">
                                <label asp-for="ProjectName" class="control-label">Görev İsmi</label>
                                <input asp-for="ProjectName" class="form-control" />
                                <span asp-validation-for="ProjectName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TeamMembers" class="control-label">Takım Üyeleri</label>
                                <input asp-for="TeamMembers" class="form-control" />
                                <span asp-validation-for="TeamMembers" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Açıklama</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group text-right">
                                <button type="submit" class="btn btn-primary" data-val="true" data-val-required="Lütfen tüm alanları doldurunuz.">Ekle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
