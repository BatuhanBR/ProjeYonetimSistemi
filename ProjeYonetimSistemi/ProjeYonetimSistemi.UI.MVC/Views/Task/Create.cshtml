@model ProjeYonetimSistemi.UI.MVC.Dto.Task.addTaskDto

@{
    ViewData["Title"] = "Görev Ekle";
    var projects = ViewBag.Projects as List<ProjeYonetimSistemi.UI.MVC.Entity.ProjectEntity>;
}

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Görev Ekleme</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div class="form-group">
                                <label asp-for="TaskName" class="control-label">Görev Adı</label>
                                <input asp-for="TaskName" class="form-control" />
                                <span asp-validation-for="TaskName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Açıklama</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <!-- ComboBox -->
                            <div class="form-group">
                                <label for="ProjectId" class="control-label">Proje Seç</label>
                                <select id="ProjectId" name="ProjectId" class="form-control" asp-for="ProjectId" asp-items="@(new SelectList(projects, "Id", "ProjectName"))">
                                    <option value="">Proje Seç</option>
                                </select>
                                <span asp-validation-for="ProjectId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DueDate" class="control-label">Bitiş Tarihi</label>
                                <input asp-for="DueDate" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                            <div class="form-group text-right" class="margin-top:6px">
                                <!-- Ekle butonunu sağ tarafa taşımak için 'text-right' sınıfını ekledik -->
                                <input type="submit" value="Görev Ekle"  class="btn btn-primary" />
                            </div>
                        </form>

                        <div>
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
