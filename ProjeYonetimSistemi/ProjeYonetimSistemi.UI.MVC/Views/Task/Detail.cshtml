@model ProjeYonetimSistemi.UI.MVC.Entity.TaskEntity

@{

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6 text-right">
                    <h1>Görev Ekleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active">Projeler</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

}
<div class="content-wrapper">
    <div class="container-fluid">

        <h1>@ViewData["Title"]</h1>

        <dl class="row">
            <dt class="col-sm-3">Proje Adı:</dt>
            <dd class="col-sm-9">@Model.</dd>

            <dt class="col-sm-3">Görev Adı:</dt>
            <dd class="col-sm-9">@Model.TaskName</dd>

            <dt class="col-sm-3">İlerleme:</dt>
            <dd class="col-sm-9">@Model.Progress %</dd>

            <dt class="col-sm-3">Açıklama:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Durum:</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Bitiş Tarihi:</dt>
            <dd class="col-sm-9">@Model.DueDate.ToShortDateString()</dd>
        </dl>

        <div class="row">
            <div class="col-sm-12">
                <a href="javascript:history.back()" class="btn btn-secondary">Geri Dön</a>
            </div>
        </div>
    </div>
</div>
