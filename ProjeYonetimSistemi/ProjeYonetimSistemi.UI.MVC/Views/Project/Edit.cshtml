@model ProjeYonetimSistemi.UI.MVC.Entity.ProjectEntity

<div class="content-wrapper" style="min-height: 1604.44px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Proje Güncelle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Project")">Projeler</a></li>
                        <li class="breadcrumb-item active">Proje Güncelle</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Proje Detayları</h3>
            </div>
            <div class="card-body">
                <form asp-action="UpdateProject" method="post">
                    
                    <div class="form-group">
                        <label asp-for="ProjectName" class="control-label">Proje İsmi</label>
                        <input asp-for="ProjectName" class="form-control" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TeamId" class="control-label">Takım</label>
                        <select asp-for="TeamId" class="form-control" asp-items="@(ViewBag.Teams as SelectList)">
                            <option value="">Lütfen bir takım seçin</option>
                        </select>
                        <span asp-validation-for="TeamId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IsActive" class="control-label">Proje Durumu</label>
                        <select asp-for="IsActive" class="form-control">
                            <option value="true" class="@(Model.IsActive ? "selected" : "")">Aktif</option>
                            <option value="false" class="@(Model.IsActive ? "selected" : "")">Pasif</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Kaydet</button>
                    <a href="@Url.Action("Index", "Project")" class="btn btn-warning"><i class="fas fa-chevron-left"></i> Geri Dön</a>
                </form>
            </div>
        </div>
    </section>
</div>
