@model ProjeYonetimSistemi.UI.MVC.Entity.ProjectEntity

<div class="content-wrapper" style="min-height: 1604.44px;">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Proje Güncelle</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Project")">Projeler</a></li>
                        <li class="breadcrumb-item active">Proje Güncelle</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Proje Detayları</h3>
            </div>
            <div class="card-body">
                <form asp-action="UpdateProject" method="post">

                    <div class="form-group">
                        <label>Proje İsmi</label>
                        <input asp-for="ProjectName" class="form-control" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label>Takım Üyeleri</label>
                        <textarea asp-for="TeamMembers" class="form-control"></textarea>
                        <span asp-validation-for="TeamMembers" class="text-danger"></span>
                    </div>


                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-success fa-pull-right"><i class="fas fa-save"></i>  Kaydet</button>
                    <a href="@Url.Action("Index", "Project")" class="btn btn-warning  pull-left"><i class="fas fa-chevron-left"></i> Geri Dön</a>
                </form>
            </div>
        </div>
    </section>
</div>
